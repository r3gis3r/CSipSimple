<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:dialogMessage="@string/w_common_display_name_desc"
        android:inputType="textVisiblePassword"
        android:key="display_name"
        android:singleLine="true"
        android:summary="@string/w_common_display_name_desc"
        android:title="@string/w_common_display_name" />
    <EditTextPreference
        android:dialogMessage="@string/w_common_username_desc"
        android:inputType="textVisiblePassword"
        android:key="username"
        android:singleLine="true"
        android:summary="@string/w_common_username_desc"
        android:title="@string/w_common_username" />

    <com.csipsimple.widgets.PasswordPreference
        android:dialogMessage="@string/w_common_password_desc"
        android:key="password"
        android:password="true"
        android:singleLine="true"
        android:summary="@string/w_common_password_desc"
        android:title="@string/w_common_password" />

    <CheckBoxPreference
        android:key="use_tcp"
        android:title="@string/w_advanced_use_tcp" />

</PreferenceScreen>